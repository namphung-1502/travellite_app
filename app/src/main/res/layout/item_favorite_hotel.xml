<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/img_hotel"
        android:layout_alignParentLeft="true"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginRight="15dp"
        android:src="@drawable/karabi"/>
    <TextView
        android:textSize="18dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:id="@+id/txt_name_hotel"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khách sạn Hilton Kuala Lumpur"
        android:layout_toRightOf="@+id/img_hotel"/>
    <TextView
        android:id="@+id/txt_place"
        android:drawablePadding="3dp"
        android:layout_marginTop="3dp"
        android:drawableLeft="@drawable/location_gray_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_toRightOf="@+id/img_hotel"
        android:layout_below="@+id/txt_name_hotel"
        android:text="Kuala Lumpur, Malaysia"/>
    <Button
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:id="@+id/btn_favotrite"
        android:textSize="15dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/favorite_red_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_place"
        android:layout_toRightOf="@id/img_hotel"
        android:text="Bỏ yêu thích"/>
    <TextView
        android:id="@+id/txt_cost"
        android:layout_marginTop="5dp"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_hotel"
        android:layout_below="@+id/btn_favotrite"
        android:text="$200"
        android:textSize="18dp"
        android:textColor="#56aaff"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/btn_detail"
        android:textColor="#fff"
        android:text="Xem chi tiết"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/txt_cost"
        android:layout_below="@id/btn_favotrite"
        android:background="#007fff" />
</RelativeLayout>