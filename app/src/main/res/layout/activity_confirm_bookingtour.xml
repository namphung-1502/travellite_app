<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".confirm_bookingtour">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận đặt tour"
            android:textSize="23dp"
            android:textColor="#000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_detailtour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết tour"
                android:textSize="20dp"
                android:textColor="#005fbf"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_title_name"
                android:layout_below="@+id/txt_detailtour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_name"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_name"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_detailtour"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phùng Văn Nam"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <View
                android:id="@+id/view1"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txt_name"/>
            <TextView
                android:id="@+id/txt_title_nametour"
                android:layout_below="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên tour "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_nametour"
                android:layout_marginLeft="100dp"
                android:id="@+id/txt_name_tour"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du lịch Hà Nội - Lào Cai - SaPa - Hạ Long"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <View
                android:id="@+id/view2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txt_name_tour"/>
            <TextView
                android:id="@+id/txt_title_day"
                android:layout_below="@+id/view2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày khởi hành "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_day"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_date"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view2"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10/2020"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txt_countpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng"
                android:textSize="20dp"
                android:layout_below="@+id/txt_date"
                android:textColor="#005fbf"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_title_adult"
                android:layout_below="@+id/txt_countpeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người lớn "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_adult"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_adult"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_countpeople"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 người"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <View
                android:id="@+id/view3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txt_adult"/>
            <TextView
                android:id="@+id/txt_title_young"
                android:layout_below="@+id/view3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trẻ em "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_young"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_young"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view3"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 người"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <View
                android:id="@+id/view4"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txt_young"/>
            <TextView
                android:id="@+id/txt_title_baby"
                android:layout_below="@+id/view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Em bé "
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:textColor="#333"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_baby"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_baby"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view4"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 người"
                android:textSize="18dp"
                android:textColor="#333"
                android:gravity="right"/>
            <View
                android:id="@+id/view5"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/txt_baby"/>
            <TextView
                android:id="@+id/txt_title_total"
                android:layout_below="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="#000"/>
            <TextView
                android:layout_toRightOf="@id/txt_title_total"
                android:layout_marginLeft="80dp"
                android:id="@+id/txt_total"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20000"
                android:textSize="23dp"
                android:textColor="#000"
                android:gravity="right"/>
        <Button
            android:layout_marginTop="40dp"
            android:layout_width="170dp"
            android:text="Hủy đặt tour"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:background="@drawable/destroy_tour"
            android:textColor="#ff5656"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_total"
            android:id="@+id/btn_cancel"/>
            <Button
                android:layout_marginLeft="40dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/btn_cancel"
                android:layout_marginTop="40dp"
                android:layout_width="170dp"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:background="@drawable/btn_confirm"
                android:textColor="#007fff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_total"
                android:id="@+id/btn_confirm"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>