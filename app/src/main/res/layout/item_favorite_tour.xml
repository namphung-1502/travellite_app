<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="320dp">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/positano"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/txt_name"
        android:textColor="#000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="Du lịch Hà Nội - Lào Cai - SaPa - Hạ Long"/>
    <TextView
        android:id="@+id/txt_money"
        android:textStyle="bold"
        android:textColor="#56aaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="$200"
        android:textSize="18dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentRight="true"/>
    <Button
        android:textAllCaps="false"
        android:background="@android:color/transparent"
        android:id="@+id/btn_favotrite"
        android:textSize="15dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/favorite_red_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:text="Bỏ yêu thích"/>
    <TextView
        android:id="@+id/btn_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name"
        android:layout_toRightOf="@id/btn_favotrite"
        android:drawableLeft="@drawable/view"
        android:text="Xem chi tiết"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#005fbf"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="7dp"/>
</RelativeLayout>