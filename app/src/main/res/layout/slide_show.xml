<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_height="240dp">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img"
        android:src="@drawable/oia"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:layout_alignParentBottom="true"
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <TextView
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="5dp"
         android:id="@+id/txt_place"
         android:textColor="#fff"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Oia"
         android:textSize="23dp"
         android:textStyle="bold"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            android:id="@+id/txt_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_place"
            android:text="Đảo Santorini, Hy Lạp"
            android:drawableLeft="@drawable/location"/>
    <ImageView
        android:layout_marginLeft="3dp"
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_district"
        android:src="@drawable/star"/>

        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_district"
            android:layout_toRightOf="@+id/star1"
            android:src="@drawable/star" />
        <ImageView
            android:id="@+id/star3"
            android:layout_toRightOf="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_district"
            android:src="@drawable/star"/>
        <ImageView
            android:id="@+id/star4"
            android:layout_toRightOf="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_district"
            android:src="@drawable/star"/>
        <ImageView
            android:id="@+id/star5"
            android:layout_toRightOf="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_district"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite_white_30"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>