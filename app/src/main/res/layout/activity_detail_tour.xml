<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_tour">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"/>
               <androidx.cardview.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/txt_name"
                           android:textSize="21dp"
                           android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                           android:layout_marginLeft="10dp"
                           android:textColor="#000"
                           android:layout_marginTop="10dp"
                           android:text="Du lịch Hà Nội - Lào Cai - Sapa- Hạ Long"/>
                       <RelativeLayout
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="5dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_marginLeft="-3dp"
                               android:id="@+id/star1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/star"
                               tools:ignore="VectorDrawableCompat" />

                           <ImageView
                               android:id="@+id/star2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@+id/star1"
                               android:src="@drawable/star"
                               tools:ignore="VectorDrawableCompat" />

                           <ImageView
                               android:id="@+id/star3"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@+id/star2"
                               android:src="@drawable/star"
                               tools:ignore="VectorDrawableCompat" />
                           <ImageView
                               android:id="@+id/star4"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@+id/star3"
                               android:src="@drawable/star"
                               tools:ignore="VectorDrawableCompat" />
                           <ImageView
                               android:id="@+id/star5"
                               android:layout_toRightOf="@+id/star4"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:src="@drawable/star"
                               tools:ignore="VectorDrawableCompat" />
                           <ImageButton
                               android:id="@+id/btn_favotrite"
                               android:background="@android:color/transparent"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignParentRight="true"
                               android:src="@drawable/favorite_border_red"
                               android:layout_marginRight="30dp"
                               tools:ignore="VectorDrawableCompat" />
                       </RelativeLayout>

                       <TextView
                           android:id="@+id/txt_sale"
                           android:textSize="17dp"
                           android:layout_marginLeft="10dp"
                           android:layout_width="wrap_content"
                           android:textColor="#ff5656"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_marginBottom="10dp"
                           android:textColor="#56aaff"
                           android:layout_marginTop="7dp"
                           android:textSize="18dp"
                           android:layout_marginLeft="7dp"
                           android:id="@+id/txt_favorite"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:drawableRight="@drawable/favorite_24_blue"
                           android:text=" Lượt yêu thích : 30"
                           android:drawablePadding="3dp"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:padding="10dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <TextView
                           android:textStyle="bold"
                           android:textColor="#000"
                           android:textSize="23dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Tổng quan"/>
                       <TextView
                           android:layout_marginTop="8dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:id="@+id/txt_des"
                           android:layout_marginLeft="5dp"
                           android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus ac finibus est.
        Aliquam tincidunt dui ultrices aliquet cursus.
        Sed at quam quam. Donec viverra, urna nec accumsan pharetra, nisl enim eleifend dui, putate"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="23dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giá"/>
                        <TableLayout
                            android:stretchColumns="*"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#000"
                                    android:drawablePadding="5dp"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giá người lớn: "
                                    android:drawableLeft="@drawable/adult"/>
                                <TextView
                                    android:id="@+id/txt_cost_adult"
                                    android:textSize="17dp"
                                    android:textColor="#005fbf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$300"/>
                            </TableRow>
                            <TableRow
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#000"
                                    android:drawablePadding="5dp"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giá trẻ em (dưới 16 tuổi): "
                                    android:drawableLeft="@drawable/student"/>
                                <TextView
                                    android:id="@+id/txt_cost_young"
                                    android:textSize="17dp"
                                    android:textColor="#005fbf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$300"/>
                            </TableRow>
                            <TableRow
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#000"
                                    android:drawablePadding="5dp"
                                    android:textSize="17dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giá em bé (dưới 1 tuổi): "
                                    android:drawableLeft="@drawable/baby"/>
                                <TextView
                                    android:id="@+id/txt_cost_baby"
                                    android:textSize="17dp"
                                    android:textColor="#005fbf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$300"/>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txt_danhgia"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="23dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đánh giá"/>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/txt_rating_5"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_below="@+id/txt_danhgia"
                            android:drawableRight="@drawable/star_22"/>
                        <ProgressBar
                            android:progressTint="#00bf00"
                            android:indeterminateTint="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_rating_5"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/txt_danhgia"
                            android:progress="90"
                            android:scaleY="2"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/txt_rating_4"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_below="@+id/txt_rating_5"
                            android:drawableRight="@drawable/star_22"/>
                        <ProgressBar
                            android:progressTint="#005fbf"
                            android:indeterminateTint="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_rating_4"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/txt_rating_5"
                            android:progress="70"
                            android:scaleY="2"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/txt_rating_3"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:layout_below="@+id/txt_rating_4"
                            android:drawableRight="@drawable/star_22"/>
                        <ProgressBar
                            android:progressTint="#56aaff"
                            android:indeterminateTint="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_rating_3"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/txt_rating_4"
                            android:progress="50"
                            android:scaleY="2"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/txt_rating_2"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_below="@+id/txt_rating_3"
                            android:drawableRight="@drawable/star_22"/>
                        <ProgressBar
                            android:progressTint="#ff7f00"
                            android:indeterminateTint="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_rating_2"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/txt_rating_3"
                            android:progress="30"
                            android:scaleY="2"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:id="@+id/txt_rating_1"
                            android:textSize="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_below="@+id/txt_rating_2"
                            android:drawableRight="@drawable/star_22"/>
                        <ProgressBar
                            android:progressTint="#ff0000"
                            android:indeterminateTint="@android:color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_rating_1"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_below="@+id/txt_rating_2"
                            android:progress="10"
                            android:scaleY="2"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:textColor="#fff"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/button_view_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem video" />
            <Button
                android:id="@+id/btn_bookingtour"
                android:layout_marginLeft="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/button_booking_tour"
                android:textColor="#fff"
                android:text="Đặt tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>