<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_width="300dp"
    android:layout_height="280dp">
 <ImageView
     android:id="@+id/img"
     android:scaleType="fitXY"
     android:layout_width="match_parent"
     android:layout_height="170dp"
     android:src="@drawable/nbpq"/>
    <ImageView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:src="@drawable/star"/>

    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_toRightOf="@+id/star1"
        android:src="@drawable/star" />
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/star3"
        android:layout_toRightOf="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:src="@drawable/star"/>
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/star4"
        android:layout_toRightOf="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:src="@drawable/star"/>
    <ImageView
        android:layout_marginTop="3dp"
        android:id="@+id/star5"
        android:layout_toRightOf="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:src="@drawable/star"/>
 <TextView
     android:id="@+id/txt_name_hotel"
     android:textSize="18dp"
     android:textColor="#000"
     android:text="Khách sạn Hilton Kuala Lumpur"
     android:layout_marginLeft="10dp"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/star1"/>
<TextView
    android:id="@+id/txt_place"
    android:drawablePadding="3dp"
    android:textSize="15dp"
    android:text="Kuala Lumpur, Malaysia"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt_name_hotel"
    android:drawableLeft="@drawable/location_red"/>
</RelativeLayout>