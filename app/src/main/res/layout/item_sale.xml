<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_marginRight="20dp"
    android:layout_height="250dp">
   <ImageView
       android:id="@+id/img"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/phuquoc" />
    <TextView
        android:id="@+id/txt_sale"
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="30dp"
        android:background="@drawable/sale"
        android:text="Khuyến mãi -35%"/>
    <TextView
        android:id="@+id/txt_name_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:text="Du lịch Hà Nội - Lào Cai - Sapa - Hạ Long"/>
     <TextView
         android:drawablePadding="5dp"
         android:drawableLeft="@drawable/sale_icon_2"
         android:id="@+id/sale"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textStyle="italic"
         android:text="Nay chỉ còn: "
         android:layout_marginLeft="5dp"
         android:textSize="17dp"
         android:layout_marginTop="4dp"
         android:layout_below="@+id/txt_name_tour"/>
    <TextView
        android:id="@+id/txt_rest"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_tour"
        android:layout_toRightOf="@id/sale"
        android:text="$210"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#007fff" />
</RelativeLayout>